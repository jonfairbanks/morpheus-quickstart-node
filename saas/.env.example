# Required Redis configuration
# Enable either Upstash (cloud) OR local Redis URL
# For Upstash (cloud Redis):
UPSTASH_REST_API_DOMAIN = "upstash-redis-domain.upstash.io"
UPSTASH_REST_API_TOKEN = "your-upstash-token-here"

# For Edge routes (optional, if using Edge runtime):
UPSTASH_EDGE_API_DOMAIN = "upstash-edge-domain.upstash.io"
UPSTASH_EDGE_API_TOKEN = "your-upstash-edge-token-here"

# For local Redis:
REDIS_URL = "redis://localhost:6379"

# Secret key for API key JWT tokens
API_KEYS_JWT_SECRET_KEY = "development-secret-key-for-testing"

# OpenAI API configuration - legacy, kept for backward compatibility
OPENAI_API_HOST = "https://api.openai.com"
OPENAI_API_KEY = "sk-youropenaiapikey"
OPENAI_API_VERSION = "v1"

# BaseImage proxy configuration
BASEIMAGE_PROXY_URL = "http://localhost:3000"
BASEIMAGE_AUTH_TOKEN = "your-baseimage-auth-token"

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# Auth
NEXTAUTH_URL=http://localhost:3000
# Generate one here:
NEXTAUTH_SECRET=
