{
  "all": true,
  "include": [
    "nodes/**/*.js",
    "src/**/*.js"
  ],
  "exclude": [
    "**/*.spec.js",
    "**/*.test.js",
    "coverage/**",
    "node_modules/**"
  ],
  "reporter": [
    "text",
    "text-summary",
    "html"
  ],
  "check-coverage": true,
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
} 